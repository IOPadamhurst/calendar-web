[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,js}]
indent_style = space
indent_size = 2
quote_type = double

[*.{json}, package.json]
indent_style = space
indent_size = 2
quote_type = double

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
